<h1> Users </h1>

<table border = 1>
	<thead>
		<tr>
			<th>Name</th>
			<th>Password</th>
			<th>Acttion</th>
		<tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.password %></td>
			<td>
				<%= link_to 'Edit', edit_user_path(user) %>
				<%= link_to 'Destroy', user_path(user), method: :delete ,data: { confirm: "Are you sure you want to delete user?" } %>
			</td>
		</tr>
		<% end %>
	</tbody> 
</table><br>

<%= link_to 'New User', new_user_path %>

